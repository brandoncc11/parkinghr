<%= form_with(model: vehicle, local: true) do |form| %>
  <% if vehicle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

      <ul>
      <% vehicle.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :plate %>
    <%= form.text_field :plate, id: :vehicle_plate %>
  </div>

  <div class="field">
    <%= form.label :state %>
    <%= form.text_field :state, id: :vehicle_state %>
  </div>

  <div class="field">
    <%= form.label :client_id %>
    <%=  form.select :client_id, options_for_select(@vehicle.show_clients.map{ |c| [c.name , c.id]}) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
